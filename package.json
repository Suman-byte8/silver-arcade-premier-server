{
  "name": "backend",
  "version": "1.0.0",
  "description": "silver arcade premeire backend",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "pm2 start ecosystem.config.js --env production",
    "dev": "nodemon server.js",
    "dev:cluster": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "logs": "pm2 logs silver-arcade-server",
    "monit": "pm2 monit",
    "test:optimization": "node test_optimization.js",
    "analyze:indexes": "node -e \"require('./test_optimization.js').testOptimizations().catch(console.error)\"",
    "loadtest:artillery": "artillery run loadtest/artillery-config.yml",
    "loadtest:k6": "k6 run loadtest/k6-script.js",
    "loadtest:concurrent": "node loadtest/concurrent-test.js",
    "loadtest:ui": "cd loadtest/ui && npm run dev",
    "loadtest:monitor": "node loadtest/monitoring/server-monitor.js"
  },
  "author": "suman saha",
  "license": "ISC",
  "dependencies": {
    "async-handler": "^0.0.3",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "bull": "^4.16.5",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-redis-cache": "^1.1.3",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "mongoose": "^8.16.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "redis": "^5.9.0",
    "serverless-http": "^4.0.0",
    "sharp": "^0.34.3",
    "streamifier": "^0.1.1",
    "trim-request": "^1.0.6"
  },
  "devDependencies": {
    "pm2": "^6.0.13",
    "artillery": "^2.0.8",
    "k6": "^0.49.0"
